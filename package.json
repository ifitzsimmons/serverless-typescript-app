{
  "dependencies": {
    "aws-sdk": "^2.824.0",
    "serverless": "^2.21.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "aws-sdk-mock": "^5.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "serverless-deployment-bucket": "^1.3.0",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "clean": "rm -rf ./build",
    "build": "yarn clean && tsc --build tsconfig.json",
    "postbuild": "cp serverless.yml ./build",
    "deploy": "cd build && sls deploy && cd ..",
    "build-deploy": "yarn build && yarn deploy",
    "lint": "NODE_ENV=development eslint . --cache --ext .js",
    "lint-fix": "yarn --silent lint --fix; exit 0",
    "test": "NODE_ENV=test ForumTable=testTable jest",
    "test-all": "yarn lint && yarn test",
    "test-cov": "yarn test --coverage",
    "test-watch": "yarn test --watch"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "moduleDirectories": [
      "mocks",
      "node_modules"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.test.ts",
      "!<rootDir>/integrationTests/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
