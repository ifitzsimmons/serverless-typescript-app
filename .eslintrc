{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier", "standard"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "rules": {
    "indent": [2, 2],
    "prettier/prettier": "error",
    "require-jsdoc": "warn",
    "quotes": [2, "single"],
    "semi": ["error", "always"],
    "comma-dangle": "off"
  }
}
